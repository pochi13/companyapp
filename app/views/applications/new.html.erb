<%= form_with model: @application,url: applications_path, local: true do |f| %>
<%= "気になった理由" %><br>
<%= f.text_field :title, placeholder:"例) 熱がひどいです"%><br>
<%= f.text_area :reason, placeholder:"例) 業界のスタンダードな部分に惹かれました", maxlength:"500" ,rows: "10"%><br>
<%= f.text_field :company_id,value: @company_id, placeholder:"例) 熱がひどいです"%><br>
<%= f.submit :"送信" %>
<% end %>
